<div class="container">
  <h3>新規投稿</h3>
  <%= form_with model:@post, url:posts_path, method: :post, local:true do |f| %>
    <%= render 'layouts/errors', obj: @post %>
    <div class="form-group pt-2">
      <%= f.label :content %>
      <%= f.text_area :content, class: "form-control", placeholder: "文字を入力してください" %>
    </div>
    <div class="form-group">
      <%= f.label :image %>
      <%= f.file_field :image, class: "form-control-file", accept: 'image/*' %>
    </div>
    <div class="form-group pt-1">
      <%= f.submit "投稿する", class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>