<header>
  <nav class="navbar navbar-expand-lg nav-light bg-red">
    <div class="container" style='height:120px'>

      <!--管理者側でのheader-->
      <%= link_to root_path do %>
        <h2>Pachinkasu</h2>
      <% end %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="row">
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            <% if admin_signed_in? %>
              <li></li>
            <% end %>
            <!--顧客側ログイン中のheader-->
            <% if end_user_signed_in? %>
              <li><%= link_to "マイページ", mypage_path(current_end_user.id), class: 'nav-link text-dark' %></li>
              <li><%= link_to "投稿一覧", posts_path, class: 'nav-link text-dark' %></li>
              <li><%= link_to "いいね一覧", root_path, class: 'nav-link text-dark' %></li>
              <li><%= link_to "ログアウト", destroy_end_user_session_path,  class: 'nav-link text-dark', method: :delete %></li>
            <% else %>
              <% unless admin_signed_in? %>
                <li><%= link_to "About", about_path, class: 'nav-link text-dark' %></li>
                <li><%= link_to "投稿一覧", posts_path, class: 'nav-link text-dark' %></li>
                <li><%= link_to "新規登録", new_end_user_registration_path, class: 'nav-link text-dark' %></li>
                <li><%= link_to "ログイン", new_end_user_session_path, class: 'nav-link text-dark' %></li>
              <% end %>
            <% end %>
          </ul>
        </div>
      </div>

    </div>
  </nav>
</header>